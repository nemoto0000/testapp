<% form_tag :action => :index do %>
年齢:

<%= text_field_tag :from_age, params[:from_age] %>
~<%= text_field_tag :to_age, params[:to_age] %> <%= submit_tag "検索" %> <% end %>

<% if @targets.count > 0 # 結果があるときのみ %>
  <font size="5" id='prof'><%= @targets[@v].first_name %>(<%= get_gender(@targets[@v].sex) %>, <%= @targets[@v].age %>)</font>
  NOW:<%= image_tag @targets[@v].pic_big, :size => '250x250' %>
  <% if @v+1 < @targets.count # 次があるときのみ %>
    NEXT:<%= image_tag @targets[@v+1].pic_big, :size => '100x100' %>
    <br /><%= link_to "LIKE", {:action => "index", :value => @v+=1, :judge => true} %> <%= link_to "SKIP", :action=> :index, :value=> @v+=1, :judge => false %>
  <% end %>
<% end #結果がなければ %>

